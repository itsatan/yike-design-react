{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "types": [
            "node",
            "vite/client"
        ],
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
    },
    "exclude": [
        "node_modules",
        "demo",
        "example",
        "dist",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/vite.config.ts",
    ]
}
