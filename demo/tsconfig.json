{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "sourceMap": true,
    "allowArbitraryExtensions": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "*": [
        "*.md",
        "*.markdown"
      ]
    },
    "types": [
      "./components.d.ts",
      "./env.d.ts",
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.md",
    "src/**/*.markdown"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "plugins",
  ]
}
